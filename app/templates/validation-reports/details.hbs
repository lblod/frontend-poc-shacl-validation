{{page-title "Details"}}

<BreadcrumbsItem>
  <strong>
    Details
  </strong>
</BreadcrumbsItem>

<AuDataTable
  @content={{this.model.results}}
  @noDataMessage="No reports" as |s|
>
  <s.menu as |menu|>
    <menu.general>
      <AuToolbar class="au-o-box">
        <AuToolbarGroup>
          <AuHeading @skin="2">
            Validation results
          </AuHeading>
        </AuToolbarGroup>
      </AuToolbar>
    </menu.general>
  </s.menu>
  <s.content as |c|>
    <c.header>
      <th class="data-table__header-title">
        Focus node
      </th>
      <th class="data-table__header-title">
        Property 
      </th>
      <th class="data-table__header-title">
        Value
      </th>
      <th class="data-table__header-title">
        Error message
      </th>
    </c.header>
    <c.body as |validationResult|>
      <td>
        {{validationResult.focusNode}}
      </td>
      <td>
        {{validationResult.resultPath}}
      </td>
      <td>
        {{validationResult.value}}
      </td>
      <td>
        {{ validationResult.transformResultMessage }}
      </td>
    </c.body>
  </s.content>
</AuDataTable>